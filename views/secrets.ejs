<%- include('partials/header') %>
  <%- include('nav') %>

    <div class="min-h-screen bg-gradient-to-b from-green-400 to-white py-12 px-4">
      <div class="mx-auto text-center space-y-5">


        <!-- Buttons -->
        <div class="flex  sm:flex-row justify-between mx-2 items-center gap-4">
          <div>
            <h1 class="text-sm md:text-2xl font-bold text-gray-800">
              You've Discovered Someone's Secret!
            </h1>
          </div>
          <div class="flex">
            <a href="/mypost" role="button"
              class="w-auto h-auto  px-3 py-2 bg-green-800 text-white text-sm md:text-lg font-semibold rounded-l-3xl hover:bg-blue-800 no-underline hover:no-underline mr-2">
              My Posts
            </a>
            <a href="/submit" role="button"
              class="w-auto px-3 py-2 bg-gray-800 text-white text-sm md:text-lg font-semibold rounded-r-3xl hover:bg-green-800  no-underline hover:no-underline">
              Submit Secret
            </a>
          </div>
        </div>



        <!-- Secret List -->
        <div
          class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 xl:grid-cols-5 gap-3 lg:gap-4  p-3 lg:p-4  bg-gradient-to-b from-gray-900 to-red-900 rounded-xl shadow-inne ">
          
           
              <% allSecrets.forEach(function(singleSecret){ %>
                <% if (singleSecret && singleSecret.text) { %>
                  <div class="flex flex-col justify-between  max-h-[400px]">
                    <div class=" h-full secret-card bg-gradient-to-b rounded-t-xl from-gray-700 to-green-800"
                      data-secret="<%= singleSecret.text ? singleSecret.text : singleSecret %>">

                      <div class="sec_icon">
                        <i class=" ghost fas fa-ghost fa-lg "></i>
                      </div>
                      <div style="max-height: 350px;" class="sec_text p-3 custom-scroll overflow-y-auto">
                        <p  class="secret-text text-2xl lg:text-sm text-gray-200 ">
                          <%= singleSecret.text %>
                        </p>
                      </div>
                    </div>

                   
                      
                    
                    <div
                      class="flex items-center justify-between px-2 py-2 border rounded-b-lg border-gray-300 text-gray-200 bg-gray-700">

                      <div>
                        <p class="text-sm text-wrap text-center text-gray-400">
                                                    Posted:
                                                    <% if (singleSecret.createdAt) { %>
                                                        <%= new Date(singleSecret.createdAt).toLocaleString('en-IN', {dateStyle: 'medium' , timeStyle: 'short' }) %>
                                                            <% } else { %>
                                                                Unknown Date
                                                                <% } %>
                        </p>
                      </div>
                      
                      <div class="flex">    
                     
                      <% const safeLikeMap=typeof likeMap !=='undefined' ? likeMap : {}; %>

                        <!-- Like Button -->
                        <form action="/secret/<%= singleSecret._id %>/like" method="POST">
                          <button type="submit">
                            <div class="flex border-r border-gray-500">
                              <div class="w-[40px] px-2 py-1 bg-black  rounded-l-2xl">
                                <i
                                  class="fas fa-thumbs-up <%= (safeLikeMap[singleSecret._id]?.likes?.includes(currentUserId)) ? 'text-blue-400' : 'text-white' %>"></i>
                              </div>

                              <div class=" px-2 py-1 bg-black ">
                                <%= safeLikeMap[singleSecret._id]?.likes?.length || 0 %>
                              </div>
                            </div>
                          </button>
                        </form>

                        <!-- Dislike Button -->
                        <form action="/secret/<%= singleSecret._id %>/dislike" method="POST">
                          <button type="submit">
                            <div class="flex ">
                              <div class="w-[40px] px-2 py-1 bg-black ">
                                <i
                                  class="fas fa-thumbs-down <%= (safeLikeMap[singleSecret._id]?.dislikes?.includes(currentUserId)) ? 'text-red-400' : 'text-white' %>"></i>

                              </div>

                              <div class=" px-2 py-1 bg-black rounded-r-2xl">
                                <%= safeLikeMap[singleSecret._id]?.dislikes?.length || 0 %>
                              </div>
                            </div>

                          </button>
                        </form>
                        </div>

                      
                    </div>


                  </div>

                  <% } %>
                    <% }); %>
                      
        </div>

        <hr class="my-10 border-gray-300">
      </div>
    </div>

    <%- include('partials/footer') %>