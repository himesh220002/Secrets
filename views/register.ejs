<%- include('partials/header') %>
<%- include('regNav') %>

<div class="d-flex flex-column align-items-center justify-content-center vh-100 bg-light">
  <!-- Register Heading -->
  <h1 class="display-4 text-dark font-weight-bold mb-4">Register</h1>

  <!-- Register Form Section -->
  <div class="card shadow w-50">
    <div class="card-body text-center">
      <form action="/register" method="POST">
        <div class="form-group">
          <label for="email" class="font-weight-bold text-dark">Email</label>
          <input type="email" class="form-control text-center" name="username" required>
        </div>
        <div class="form-group">
          <label for="password" class="font-weight-bold text-dark">Password</label>
          <input type="password" class="form-control text-center" name="password" required>
        </div>
        <button type="submit" class="btn btn-dark btn-lg btn-block mt-3">Register</button>
      </form>
    </div>
  </div>

  <!-- Social Register Section -->
  <div class="card shadow w-50 mt-4">
    <div class="card-body text-center">
      <a class="btn btn-danger btn-lg btn-block font-weight-bold d-flex align-items-center justify-content-center"
         href="/auth/google" role="button">
        <i class="fab fa-google mr-2"></i> Sign up with Google
      </a>
    </div>
  </div>

  <div style="width: 190px;" class="card shadow mt-4">
  <div class="card-body text-center">
    <a href="/login" role="button" class="btn btn-primary btn-lg btn-block font-weight-bold d-flex align-items-center justify-content-center">
      Login
    </a>
  </div>
  </div>
</div>

<%- include('partials/footer') %>
