<%- include('partials/header') %>
<%- include('nav') %>

<div class="max-w-5xl lg:max-w-3xl mx-auto py-10 px-20 lg:px-5">
  <div class="bg-gray-100 shadow-xl p-20 lg:p-8 rounded-2xl text-center">
    <i class="fas fa-key text-6xl text-blue-600 mb-6"></i>
    <h1 class="text-4xl font-bold mb-4">Secrets</h1>
    <p class="text-gray-600 mb-10 text-2xl lg:text-lg lg:mb-6">Don't keep your secrets, share them anonymously!</p>

    <form id="secretForm" action="/submit" method="POST" novalidate>
      <div class="mb-4">
        <input
          type="text"
          id="secretInput"
          name="secret"
          placeholder="What's your secret?"
          class="w-full text-center p-5 text-3xl lg:text-lg border-2 border-blue-500 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400 transition"
        />
      </div>
      <button
        type="submit"
        class="bg-green-600 text-white text-3xl lg:text-lg px-6 py-4 lg:py-2 rounded-lg hover:bg-green-700 transition"
      >
        Submit
      </button>
    </form>

    <script>
      document.getElementById('secretForm').addEventListener('submit', function (e) {
        const input = document.getElementById('secretInput').value.trim();
        if (!input) {
          e.preventDefault();
          alert("Enter secret");
        }
      });
    </script>
  </div>
</div>

<script>
  const placeholders = [
    "What's on your mind?",
    "Let's talk!",
    "Anything bothering you?",
    "Share your thoughts anonymously!",
    "Your secret is safe here!",
    "Unspoken thoughts? Share them here!",
    "Got something on your mind?",
    "A little secret never hurt anyone!",
    "What’s that one thing you wish you could say?",
    "Let it out, no one will judge!",
    "Ever had a thought too deep to say out loud?",
    "You can be completely honest here!",
    "Write it down—no pressure!",
    "This is a safe space for your thoughts!",
    "A secret waiting to be told?",
    "What's the untold story in your heart?",
    "Anonymously share what’s weighing you down!",
    "A quiet confession, just for you!",
    "No names. Just words. What's yours?",
    "Ever had a thought you'd never tell anyone?",
    "Free your mind—type it here!",
    "Got something you need to get off your chest?",
    "A passing thought or a deep truth?",
    "Speak from the heart!",
    "Let your words flow without hesitation!"
  ];

  const secretInput = document.getElementById('secretInput');

  function changePlaceholder() {
    secretInput.classList.add("opacity-100");
    setTimeout(() => {
      const randomIndex = Math.floor(Math.random() * placeholders.length);
      secretInput.placeholder = placeholders[randomIndex];
      secretInput.classList.remove("opacity-100");
    }, 500);
  }

  setInterval(changePlaceholder, 5000);
</script>

