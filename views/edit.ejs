<%- include("partials/header") %>
<%- include("nav") %>

<div class="min-h-screen bg-gradient-to-br from-gray-800 to-green-900 flex items-center justify-center px-20 py-12">
  <div class="w-full max-w-4xl p-6 bg-white rounded-lg shadow-xl">
    <h1 class="text-5xl lg:text-2xl font-bold text-center text-gray-800 mb-6">Edit Your Secret</h1>

    <form action="/edit/<%= secret._id %>" method="POST" class="space-y-4">
      <div>
        <label for="secret" class="block mb-1 font-medium text-3xl lg:text-xl text-gray-700">Secret Text</label>
        <textarea id="secret" name="secret" rows="5" required class="w-full p-3 border border-gray-300 text-2xl lg:text-lg rounded-md resize-none focus:ring-2 focus:ring-green-400"><%= secret.text %></textarea>
      </div>

      <div class="flex justify-between mt-4">
        <a href="/mypost" class="px-5 py-5 lg:px-4 lg:py-2 text-3xl lg:text-lg bg-gray-300 hover:bg-gray-400 rounded-lg text-black">Cancel</a>
        <button type="submit" class="px-5 py-5 lg:px-4 lg:py-2 text-3xl lg:text-lg bg-green-600 hover:bg-green-700 text-white rounded-lg">Update</button>
      </div>
    </form>
  </div>
</div>

<%- include("partials/footer") %>
