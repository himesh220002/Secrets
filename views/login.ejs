<%- include('partials/header') %>
<%- include('regNav') %>

<div class="flex flex-col items-center justify-start min-h-screen bg-green-100 py-20 px-4">

  <!-- Login Heading -->
  <h1 class="text-4xl font-bold text-gray-800 mb-6">Login</h1>

  <!-- Login Form Section -->
  <div class="bg-white shadow-lg rounded-xl w-full max-w-md p-6">
    <form action="/login" method="POST" class="space-y-5">
      <div>
        <label for="email" class="block text-gray-700 font-semibold mb-1">Email</label>
        <input 
          type="email" 
          name="username" 
          required 
          class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 text-center"
        >
      </div>
      <div>
        <label for="password" class="block text-gray-700 font-semibold mb-1">Password</label>
        <input 
          type="password" 
          name="password" 
          required 
          class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 text-center"
        >
      </div>
      <button 
        type="submit" 
        class="w-full py-3 bg-gray-800 text-white text-lg rounded-md hover:bg-gray-700 transition"
      >
        Login
      </button>
    </form>
  </div>

  <!-- Social Login Section -->
  <div class="bg-white shadow-lg rounded-xl w-full max-w-md p-6 mt-6 text-center">
    <a 
      href="/auth/google"
      role="button"
      class="flex items-center justify-center gap-3 w-full py-3 text-white bg-red-600 hover:bg-red-500 rounded-md text-lg font-semibold transition"
    >
      <i class="fab fa-google"></i> Sign in with Google
    </a>
  </div>

  <!-- Register Redirect -->
  <div class="bg-white shadow-lg rounded-xl w-48 p-4 mt-6 text-center">
    <a 
      href="/register"
      role="button"
      class="w-full block py-2 bg-blue-600 text-white font-semibold rounded-md hover:bg-blue-500 transition"
    >
      Register
    </a>
  </div>
</div>

<%- include('partials/footer') %>
